// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId      Int          @id @default(autoincrement())
  name        String
  email       String
  role        Role         @default(USER)
  isAdmin     Boolean
  preferences Preferences?

  writtenPosts  Post[] @relation("WrittenPosts")
  favoritePosts Post[] @relation("favoritePosts")
  // @@id([email, name])

  @@index([name])
}

model Preferences {
  id           Int     @id @default(autoincrement())
  emailUpdates Boolean 
  user         User?    @relation(fields: [userId], references: [userId])
  userId       Int    @unique @default(autoincrement())

  @@unique([id, userId])
}

model Post {
  id            Int        @id @default(dbgenerated())
  authorId      Int
  rating        Float
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  author        User       @relation("WrittenPosts", fields: [authorId], references: [userId])
  favoritedBy   User?      @relation("favoritePosts", fields: [favoritedById], references: [userId])
  favoritedById Int?
  category      category[]
}

model category {
  id    Int    @id @default(autoincrement())
  posts Post[]
}

enum Role {
   ADMIN 
   USER 
}
